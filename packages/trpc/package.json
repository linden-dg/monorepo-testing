{
  "name": "@spicy-soup/trpc",
  "version": "1.0.0",
  "sideEffects": false,
  "scripts": {
    "lint": "eslint \"src/**/*.ts*\"",
    "build": "tsup ./client.ts ./server.ts --format esm,cjs --dts ",
    "dev": "tsup ./client.ts ./server.ts --format esm,cjs --watch --dts "
  },
  "exports": {
    "./client": "./client.ts",
    "./server": "./server.ts"
  },
  "files": [
    "client.ts",
    "server.ts"
  ],
  "dependencies": {
    "@spicy-soup/utils": "*",
    "@trpc/client": "^10.0.0-proxy-beta.26",
    "@trpc/next": "^10.0.0-proxy-beta.26",
    "@trpc/server": "^10.0.0-proxy-beta.26",
    "@tanstack/react-query": "^4.13.0",
    "@trpc/react-query": "^10.0.0-proxy-beta.26",
    "superjson": "^1.11.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@spicy-soup/eslint-config": "*",
    "@spicy-soup/tsconfig": "*",
    "@types/spicy-soup": "*",
    "typescript": "^4.5.2"
  }
}
